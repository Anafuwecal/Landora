generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Property {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String   @db.Text
  price       Decimal  @db.Decimal(12, 2)
  area        Int      // in square meters
  rooms       Int
  bathrooms   Int
  floor       Int?
  totalFloors Int?
  mortgage    Decimal? @db.Decimal(5, 2) // mortgage percentage
  features    String[] // array of feature strings
  images      String[] // array of image URLs
  status      PropertyStatus @default(AVAILABLE)
  type        PropertyType
  location    String
  address     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([status, type])
  @@index([slug])
}

enum PropertyStatus {
  AVAILABLE
  SOLD
  RESERVED
  COMING_SOON
}

enum PropertyType {
  APARTMENT
  HOUSE
  PENTHOUSE
  STUDIO
}

model NewsPost {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  excerpt     String   @db.Text
  content     String   @db.Text
  image       String
  author      String
  tags        String[]
  category    String
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([published, publishedAt])
  @@index([slug])
  @@index([category])
}

model TeamMember {
  id        String   @id @default(cuid())
  name      String
  role      String
  image     String
  bio       String?  @db.Text
  email     String?
  phone     String?
  linkedin  String?
  facebook  String?
  twitter   String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([active, order])
}

model Office {
  id        String   @id @default(cuid())
  name      String
  address   String
  city      String
  country   String
  phone     String?
  email     String?
  mapUrl    String?
  hours     String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([active, order])
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String   @db.Text
  property  String?  // optional property reference
  status    ContactStatus @default(NEW)
  notes     String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([status, createdAt])
}

enum ContactStatus {
  NEW
  IN_PROGRESS
  COMPLETED
  ARCHIVED
}

model GalleryImage {
  id        String   @id @default(cuid())
  title     String?
  url       String
  category  String   // All, Interior, Building, Spaces
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  
  @@index([category, active, order])
}

model Certificate {
  id        String   @id @default(cuid())
  title     String
  image     String
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  
  @@index([active, order])
}

model FAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String   @db.Text
  category  String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([active, order])
}

model PressRelease {
  id          String   @id @default(cuid())
  mediaName   String
  headline    String
  logo        String?
  url         String?
  publishedAt DateTime
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  @@index([active, publishedAt])
}

model Facility {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  icon        String   // icon name or URL
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  @@index([active, order])
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  
  @@index([email])
}